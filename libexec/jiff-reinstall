#!/usr/bin/env bash
# Usage: jiff reinstall
# Summary: Reinstall jiff

source commonlib
# source jifflib # jiff-specific functions
# source platformlib # platform-specific functions

strict_mode_on
# trace_on # for debugging while developing

rm -rf "${_JIFF_ROOT}"
basher uninstall binaryphile/jiff-core
basher uninstall binaryphile/bash-libs
# TODO: install the user's version not mine
basher install binaryphile/jiff-personal

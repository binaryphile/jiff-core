#!/usr/bin/env bash
# Usage: jiff reinstall [package]
# Summary: Reinstall a system package

source commonlib
source jifflib # jiff-specific functions
source platformlib # platform-specific functions

strict_mode_on
# trace_on # for debugging while developing

package="${1}"

run_and_exit_if_is_jiff_task "${package}-reinstall"
uninstall_package "${package}"
install_package "${package}"
